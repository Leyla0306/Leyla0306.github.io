extends templates/main

block variables
  - var title = 'Pomodoro Timer'

block content
  .bg-blue
  .bg-red
  
  button.settings-btn 
    img(src="img/set.svg", alt="")

  .timer
    //- Progress bar
    .timer__progress.
      <svg width="300" height="300">
        <circle
          cx="150"
          cy="150"
          r="140"
          stroke="rgba(250, 250, 250, 0.1)"
          stroke-width="5"
          fill="none" />
      </svg>
      <svg width="300" height="300" id="progress">
        <circle
          cx="150"
          cy="150"
          r="140"
          stroke="rgb(250, 250, 250)"
          stroke-width="5"
          stroke-dasharray="880"
          stroke-dashoffset="880"
          fill="none" />
      </svg>

    //- Timer
    .timer__time
      span.min
      span :
      span.sec

  //- Start button
  .controls
    button.btn.js-start Start
    button.btn.js-pause(style="display: none") Pause
    button.btn.js-stop(style="display: none") Stop
    button.btn.js-continue(style="display: none") Continue

  //- Modal settings
  .modal 
    .modal-overlay 
    .modal-content 
      form.settings-form.js-settingsForm(action="/") 
        .form-group 
          label Pomodoro 
          input.form-control(type="number", value="", id="pomodoro")   
        .form-group 
          label Shork Break 
          input.form-control(type="number", value="", id="short-break")   
        .form-group 
          label Long Break
          input.form-control(type="number", value="", id="long-break")   
        .form-group 
          label Number of pomodoro between long break
          input.form-control(type="number", value="", id="short-period")  

        .controls 
          button(type="button").btn.js-modalHide Close 
          button(type="submit").btn Save
