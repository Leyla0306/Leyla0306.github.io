-
  var menu = [
    {name: "Home", link: "index.html"},
    {name: "About", link: "about.html"},
    {name: "Blog", link: "blog.html"},

  ]

header.header 
  a.nav__open(href="#menu") 
    img(src="img/open.svg" alt="")
  nav.nav#menu 
    a(href="#close").nav__close
      img(src="img/close.svg" alt="") 
    ul 
      each item in menu 

        if item.link ==currentPageLink 
          - var isActive = 'active'
        else 
          - var isActive = ''

        li 
          a(href=item.link, class=isActive)=item.name 